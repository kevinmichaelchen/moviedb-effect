# TMDB (The Movie Database)
# Get your free API key at: https://www.themoviedb.org/settings/api
# Use the "API Read Access Token" (Bearer token)
TMDB_API_KEY=your_tmdb_bearer_token_here

# OMDb (Open Movie Database)
# Get your free API key at: http://www.omdbapi.com/apikey.aspx
# Free tier: 1,000 requests/day
OMDB_API_KEY=your_omdb_api_key_here

# Trakt
# Create an application at: https://trakt.tv/oauth/applications
# Rate limits: 10,000 req/5min (client ID), 1,000 req/5min (OAuth)
TRAKT_CLIENT_ID=your_trakt_client_id_here
TRAKT_CLIENT_SECRET=your_trakt_client_secret_here

# Watchmode
# Get your API key at: https://api.watchmode.com/
# Requires account signup; free tier available
WATCHMODE_API_KEY=your_watchmode_api_key_here

# Letterboxd
# Apply for API access at: https://letterboxd.com/api-beta/
# Note: API is in private beta and requires approval
LETTERBOXD_API_KEY=your_letterboxd_api_key_here
LETTERBOXD_API_SECRET=your_letterboxd_api_secret_here
