{
  "name": "movie-effect-monorepo",
  "description": "Effect-based clients for movie APIs (TMDB, OMDB, Trakt, WatchMode, Letterboxd)",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nx run-many -t build",
    "test": "nx run-many -t test",
    "test:unit": "nx run-many -t test:unit",
    "test:integration": "nx run-many -t test:integration",
    "lint": "nx run-many -t lint",
    "format": "dprint fmt",
    "format:check": "dprint check",
    "typecheck": "tsc --noEmit",
    "knip": "knip",
    "precommit": "pnpm typecheck && pnpm lint && pnpm format:check && pnpm knip && pnpm test:unit",
    "prepare": "lefthook install",
    "ruler": "npx -y ruler-mcp@latest apply"
  },
  "devDependencies": {
    "@effect/eslint-plugin": "^0.3.2",
    "@eslint/js": "^9.39.1",
    "@nx/js": "latest",
    "@swc-node/register": "^1.11.1",
    "@swc/core": "^1.15.3",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "dotenv": "^17.2.3",
    "dprint": "^0.49.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "knip": "^5.70.2",
    "lefthook": "^1.11.13",
    "nx": "latest",
    "tsdown": "^0.16.7",
    "tsx": "^4.20.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14"
  }
}
