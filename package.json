{
  "name": "moviedb-effect-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nx run-many -t build",
    "test": "nx run-many -t test",
    "test:unit": "nx run-many -t test:unit",
    "test:integration": "nx run-many -t test:integration",
    "lint": "nx run-many -t lint",
    "format": "prettier --write \"packages/**/*.ts\"",
    "format:check": "prettier --check \"packages/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "knip": "knip",
    "precommit": "pnpm typecheck && pnpm lint && pnpm format:check && pnpm knip && pnpm test:unit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@effect/eslint-plugin": "^0.3.2",
    "@effect/vitest": "^0.27.0",
    "@eslint/js": "^9.39.1",
    "@nx/js": "latest",
    "@swc-node/register": "^1.11.1",
    "@swc/core": "^1.15.3",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "knip": "^5.70.2",
    "lint-staged": "^16.2.7",
    "nx": "latest",
    "prettier": "^3.6.2",
    "tsdown": "^0.16.7",
    "tsx": "^4.20.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14"
  }
}
