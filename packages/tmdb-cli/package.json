{
  "name": "@movie-effect/tmdb-cli",
  "private": true,
  "description": "A CLI for interacting with themoviedb.org API using Effect",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "tmdb": "./dist/index.mjs"
  },
  "scripts": {
    "build": "tsdown src/index.ts",
    "build:watch": "tsdown --watch",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "lint": "eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kevinmichaelchen/movie-effect.git",
    "directory": "packages/tmdb-cli"
  },
  "license": "MIT",
  "keywords": [
    "themoviedb",
    "api",
    "tmdb",
    "effect",
    "cli",
    "movie-effect"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@effect/cli": "^0.72.1",
    "@effect/platform": "^0.93.3",
    "@effect/platform-node": "^0.101.1",
    "@effect/printer": "^0.47.0",
    "@effect/printer-ansi": "^0.47.0",
    "@movie-effect/tmdb": "workspace:*",
    "dotenv": "^16.4.7",
    "effect": "^3.19.6"
  }
}
