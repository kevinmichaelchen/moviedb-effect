{
  "name": "@movie-effect/watchmode",
  "description": "An Effect-based client for the Watchmode API",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "tsdown src/index.ts",
    "build:watch": "tsdown --watch",
    "test": "vitest run --passWithNoTests",
    "test:unit": "vitest run tests/**/*.unit.test.ts --passWithNoTests",
    "test:integration": "vitest run tests/**/*.integration.test.ts --passWithNoTests",
    "lint": "eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kevinmichaelchen/movie-effect.git",
    "directory": "packages/watchmode"
  },
  "license": "MIT",
  "keywords": [
    "watchmode",
    "api",
    "effect",
    "movie-effect",
    "movies",
    "streaming",
    "typescript"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "dependencies": {
    "@movie-effect/core": "workspace:*",
    "@effect/platform": "^0.93.3",
    "@effect/platform-node": "^0.101.1",
    "effect": "^3.19.6"
  }
}
