{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "project": ["*.{js,mjs,cjs,ts}"]
    },
    "packages/core": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/tmdb": {
      "entry": ["src/index.ts", "tests/**/*.test.ts"],
      "project": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "packages/omdb": {
      "entry": ["src/index.ts", "tests/**/*.test.ts"],
      "project": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "packages/trakt": {
      "entry": ["src/index.ts", "tests/**/*.test.ts"],
      "project": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "packages/watchmode": {
      "entry": ["src/index.ts", "tests/**/*.test.ts"],
      "project": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "packages/letterboxd": {
      "entry": ["src/index.ts", "tests/**/*.test.ts"],
      "project": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "packages/tmdb-cli": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/omdb-cli": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/trakt-cli": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/watchmode-cli": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/letterboxd-cli": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    }
  },
  "ignoreDependencies": [
    "@effect/language-service",
    "@nx/js",
    "@typescript-eslint/eslint-plugin",
    "@typescript-eslint/parser"
  ],
  "ignore": ["**/dist/**"],
  "ignoreExportsUsedInFile": true
}
