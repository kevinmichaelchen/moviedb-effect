{
  "compilerOptions": {
    /* Build Performance */
    "incremental": true,
    "composite": true,

    /* Basic Options */
    "target": "ES2022",
    "declaration": true,
    "baseUrl": ".",

    /* Module System - Library settings for npm packages */
    "module": "NodeNext",
    "moduleDetection": "force",
    "verbatimModuleSyntax": true,
    "rewriteRelativeImportExtensions": true,

    /* Path Mappings for Workspace Packages */
    "paths": {
      "@movie-effect/core": ["packages/core/src/index.ts"],
      "@movie-effect/tmdb": ["packages/tmdb/src/index.ts"],
      "@movie-effect/tmdb-cli": ["packages/tmdb-cli/src/index.ts"],
      "@movie-effect/omdb": ["packages/omdb/src/index.ts"],
      "@movie-effect/omdb-cli": ["packages/omdb-cli/src/index.ts"],
      "@movie-effect/trakt": ["packages/trakt/src/index.ts"],
      "@movie-effect/trakt-cli": ["packages/trakt-cli/src/index.ts"],
      "@movie-effect/watchmode": ["packages/watchmode/src/index.ts"],
      "@movie-effect/watchmode-cli": ["packages/watchmode-cli/src/index.ts"],
      "@movie-effect/letterboxd": ["packages/letterboxd/src/index.ts"],
      "@movie-effect/letterboxd-cli": ["packages/letterboxd-cli/src/index.ts"]
    },

    /* Type Safety */
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUnusedLocals": true,
    "noImplicitOverride": true,

    /* Development */
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Effect Integration */
    "plugins": [
      {
        "name": "@effect/language-service"
      }
    ]
  },
  "exclude": ["node_modules", "dist"]
}
